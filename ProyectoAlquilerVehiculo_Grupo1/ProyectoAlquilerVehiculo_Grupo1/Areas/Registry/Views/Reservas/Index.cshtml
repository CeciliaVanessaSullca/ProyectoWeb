@model IEnumerable<CoreAlquiler.Reserva>

@{
    ViewBag.Title = "Reserva";
}

<h2>Reserva de vehículos</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha Reserva
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
          Días
        </th>
        <th>
           Retraso
        </th>
        <th>
           Apellido
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehiculo.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaReserva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NroDias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NroRetraso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.ApePaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehiculo.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CodReserva }) |
            @Html.ActionLink("Details", "Details", new { id=item.CodReserva }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CodReserva })
        </td>
    </tr>
}

</table>
